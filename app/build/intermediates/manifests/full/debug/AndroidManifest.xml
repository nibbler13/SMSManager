<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smsmanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service
            android:name="com.example.smsmanager.CheckEmailsAndSendSMS"
            android:exported="false" />

        <activity
            android:name="com.example.smsmanager.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.smsmanager.LogViewActivity"
            android:label="@string/logview_activity"
            android:parentActivityName="com.example.smsmanager.MainActivity"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="com.example.smsmanager.SettingsActivity"
            android:label="@string/settings_activity"
            android:parentActivityName="com.example.smsmanager.MainActivity"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="com.example.smsmanager.AddressesListActivity"
            android:label="@string/addresses_list_activity"
            android:parentActivityName="com.example.smsmanager.SettingsActivity"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SettingsActivity" />
        </activity>
        <activity
            android:name="com.example.smsmanager.ExcludedListActivity"
            android:label="@string/excluded_list_activity"
            android:parentActivityName="com.example.smsmanager.SettingsActivity"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SettingsActivity" />
        </activity>
        <activity
            android:name="com.example.smsmanager.POP3SettingsActivity"
            android:label="@string/pop3settings_activity"
            android:parentActivityName="com.example.smsmanager.SettingsActivity"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SettingsActivity" />
        </activity>
        <activity
            android:name="com.example.smsmanager.TimetableActivity"
            android:label="@string/timetable_layout"
            android:parentActivityName="com.example.smsmanager.SettingsActivity"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SettingsActivity" />
        </activity>
        <activity
            android:name="com.example.smsmanager.GeneralSettingsActivity"
            android:label="@string/general_settings"
            android:parentActivityName="com.example.smsmanager.SettingsActivity"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SettingsActivity" />
        </activity>
        <activity
            android:name="com.example.smsmanager.UnreadSymbolsActivity"
            android:label="@string/unread_symbols"
            android:parentActivityName="com.example.smsmanager.SettingsActivity"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SettingsActivity" />
        </activity>
        <activity
            android:name="com.example.smsmanager.SettingsActivity2"
            android:label="@string/title_activity_settings_activity2" >
        </activity>
    </application>

</manifest>